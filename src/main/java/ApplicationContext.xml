<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="jdbcTemplate"
		class="org.springframework.jdbc.core.JdbcTemplate"
		autowire="byName" scope="prototype">
		<property name="dataSource" ref="dataSource"></property>
	</bean>

	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver"></property>
		<property name="url" value="jdbc:mysql://localhost/wicketDB"></property>
		<property name="username" value="root"></property>
		<property name="password" value="root"></property>
	</bean>
	
	<bean id="UserDAO" class="org.Lukashman.DB.UserDAOImpl"
		scope="prototype" autowire="byName">
		<property name="jdbcTemp" ref="jdbcTemplate"></property>
	</bean>

	<bean id="ImageDAO" class="org.Lukashman.DB.ImageDAOimpl"
		autowire="byName" scope="prototype">
		<property name="jdbcTemp" ref="jdbcTemplate"></property>
	</bean>
	
	<bean id="TypeDAO" class="org.Lukashman.DB.TypeDAOimpl" 
		scope="prototype" autowire="byName" >
		<property name="jdbcTemp" ref="jdbcTemplate"></property>
	</bean>
</beans>
